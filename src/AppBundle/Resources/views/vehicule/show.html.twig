{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <div class="clearfix" style="width:100%;">
        <a href="{{ path('vehicule_index') }}" class="float-left btn btn-secondary ml-5 mb-3">Retour à la liste des véhicules</a>
    </div>
    <div class="container">
        <h1>Vehicule n°{{ vehicule.idvehicule }}</h1>
        <div class="card">
            <div class="card-body">
                <p>Immatriculation : {{ vehicule.immatriculation }}</p>
                <p>Modèle : {{ vehicule.modele }}</p>
                <p>Marque : {{ vehicule.marque }}</p>
                <p>Nombre de place : {{ vehicule.nbplace }}</p>
                <p>Kilométrage : {{ vehicule.kilometrage }} kms</p>
            </div>
        </div>

        <div class="row text-center mt-3 divBoutonsMonCompte">
                <div class="col-sm">
                        {{ include('@App/vehicule/_delete_form.html.twig') }}
                </div>
                <div class="col-sm">
                    <a class="btn btn-info" href="{{ path('vehicule_edit', {'idvehicule': vehicule.idvehicule}) }}">Modifier le véhicule</a>
                </div>
            </div>
        

        
    </div>
{% endblock %}