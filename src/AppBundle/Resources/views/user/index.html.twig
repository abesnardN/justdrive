{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Iduser</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Permis</th>
                <th>Urlpermis</th>
                <th>Dateinscription</th>
                <th>Mail</th>
                <th>Numtel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.iduser }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.permis ? user.permis|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.urlpermis }}</td>
                <td>{{ user.dateinscription ? user.dateinscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.numtel }}</td>
                <td>
                    <a href="{{ path('user_show', {'iduser': user.iduser}) }}">show</a>
                    <a href="{{ path('user_edit', {'iduser': user.iduser}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
