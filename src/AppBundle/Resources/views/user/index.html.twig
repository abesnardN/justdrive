{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des utilisateurs</h1>
        <div class="clearfix" style="width:100%;">
            <a href="{{ path('user_new') }}" class="float-right btn btn-success mr-5 mb-3">Ajouter un nouvel utilisateur</a>
        </div>
        <div class="row ml-5">
            {% for user in users %}
            <div class="card col-sm-3 col-md-3 col-lg-3 col-xs-3 m-1 text-center cardVehicule">
                <a href="{{ path('user_show', {'iduser': user.iduser}) }}">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-md">
                            <div>{{ user.prenom }} {{ user.nom }}</div>
                            <div>{{ user.mail }}</div>
                            <div>Date d'inscription : {{ user.dateinscription ? user.dateinscription|date('d-m-Y') : '' }}</div>
                        </div>
                      </div>
                    </div>
                </a>
                  </div>
            {% else %}
                <div class="col-md align-content-center text-md-center m-5">
                    <div class="alert alert-info">Aucun utilisateur n'est enregistrÃ©.</div>
                </div>
            {% endfor %}
            
        </div>
    
    </div>
    
        


{% endblock %}
