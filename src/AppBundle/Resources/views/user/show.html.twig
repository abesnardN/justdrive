{% extends 'base.html.twig' %}

{% block title %}Votre compte{% endblock %}

{% block body %}


<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Votre compte</h1>
            <div class="card-columns d-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <p>Nom : {{ user.nom }}</p>
                        <p>Prénom : {{ user.prenom }}</p>
                        <p>Téléphone : {{ user.numtel }}</p>
                        <p>Email : {{ user.mail }}</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <p>Permis : {{ user.permis is defined and user.permis is not empty ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>' }}</p>
                        <p>Date de l'inscription : {{ user.dateinscription ? user.dateinscription|date('j F Y') : '' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-3">
        <div class="col-sm">
            {{ include('@App/user/_delete_form.html.twig') }}
        </div>
        <div class="col-sm">
            <a class="btn btn-info  " href="{{ path('user_edit', {'iduser': user.iduser}) }}">Modifier mes informations</a>
        </div>

    </div>
</div>
{% endblock %}
