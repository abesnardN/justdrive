<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>Connectez vous </title>
        {% include 'css.html.twig' %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body class="container">
        <img src="{{ asset('bundles/app/imgs/logo.svg') }}" class="rounded mx-auto d-block" id="logo">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('connexion') }}" method="post" class="text-center" id="formConnexion">
            <div class="card">
                <div class="form-group">
                    <label for="mail" class="col-sm-2 col-form-label">Votre email:</label>
                    <input type="text" id="mail" name="_username" placeholder="exemple@email.fr"
                           class="form-control text-center"/>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-4 col-form-label">Votre mot de passe:</label>
                    <input type="password" id="password" name="_password" class="form-control text-center"/>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </div>
        </form>

        {% include 'js.html.twig' %}

    </body>
</html>



