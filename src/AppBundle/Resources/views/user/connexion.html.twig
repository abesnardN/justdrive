<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>Connectez vous </title>
        {% block stylesheets %}
            {% include 'css.html.twig' %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body class="container">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('connexion') }}" method="post" class="text-center">
            <div class="form-group">
                <label for="mail" class="col-sm-2 col-form-label">Votre email:</label>
                <input type="text" id="mail" name="_username" placeholder="exemple@email.fr" class="form-control text-center"/>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 col-form-label">Votre mot de passe:</label>
                <input type="password" id="password" name="_password" class="form-control text-center"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </div>
        </form>

        {% block javascripts %}
            {% include 'js.html.twig' %}
        {% endblock %}

    </body>
</html>



